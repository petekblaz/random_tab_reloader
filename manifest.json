{
  "manifest_version": 3,
  "name": "Random Tab Reloader",
  "version": "1.0",
  "description": "Reload the current tab randomly between user-specified intervals.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs"
  ]
}
